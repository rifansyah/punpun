<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_buat_kamu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF4081"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gift"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Kamu"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dulu_dulu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF80AB"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_galeri"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dulu-dulu"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_cerita"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80d8ff"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_story"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cerita-cerita"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_terima_kasih"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#90CAF9"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_smile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terima Kasih"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_putri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circle"
            android:backgroundTint="#EEFF41"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/putri"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

    </FrameLayout>

    <TextView
        android:id="@+id/text_putri"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="-50dp"
        android:elevation="5dp"
        android:layout_marginLeft="-50dp"
        android:gravity="center"
        android:backgroundTint="#B71C1C"
        android:layout_gravity="center"
        android:text="Putri"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/text_umur"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginBottom="-60dp"
        android:layout_marginRight="-50dp"
        android:gravity="center"
        android:elevation="5dp"
        android:backgroundTint="#3F51B5"
        android:layout_gravity="center"
        android:text="20th"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/text_ganti"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="-50dp"
        android:gravity="center"
        android:elevation="5dp"
        android:backgroundTint="#3F51B5"
        android:layout_gravity="center"
        android:text="Click Me"
        android:background="@drawable/circle"/>

</FrameLayout>