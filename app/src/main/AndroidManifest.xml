<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studio.fatih.punpun">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BuatKamuActivity" />

        <service
            android:name=".BackgroundSoundService"
            android:stopWithTask="true" />

        <activity android:name=".DuluDuluActivity" />
        <activity android:name=".CeritaCeritaActivity" />
        <activity android:name=".TerimaKasihActivity"></activity>
    </application>

</manifest>